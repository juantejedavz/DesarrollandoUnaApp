<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mx.blogspot.juanmtejedav.desarrollandounaapp.DatosIntroducidos">

    <TextView
        android:id="@+id/TV_confirmarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/confirmarDatos"
        android:textColor="@color/textPrimary"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/TV_nombreCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/TV_fechaN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/TV_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/TV_email"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/TV_descripcion"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/textPrimary" />

    <Button
        android:id="@+id/BT_editarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="toMain"
        android:padding="22dp"
        android:text="@string/editarDatos"
        android:textColor="@color/textIcons"
        android:textSize="20dp" />

</LinearLayout>
